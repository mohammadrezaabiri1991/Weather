<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/_16dp"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradiant">

    <ImageView
        android:id="@+id/imgLogoSplash"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        app:layout_constraintBottom_toTopOf="@+id/txtFromSplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_weather_app" />


    <TextView
        android:id="@+id/txtFromSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/from"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtMohammadReza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtMohammadReza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:gravity="center"
        android:text="@string/mohammad_reza_abiri"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtAppVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/txtAppVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>